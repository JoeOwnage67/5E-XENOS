<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
<!-- Warforged Facial Markings -->
	<GeneDef>
    		<defName>WarforgedMarkings</defName>
    		<label>warforged markings</label>
		<description>The face of the Warforged bears the unmistakable marks of their synthetic origin.</description>
    		<iconPath>UI/Icons/Genes/Gene_WarforgedMarkings</iconPath>
    		<displayCategory>Cosmetic</displayCategory>
    		<iconColor>(0.75, 0.75, 0.75)</iconColor>
    		<displayOrderInCategory>500</displayOrderInCategory>
    		<biostatCpx>0</biostatCpx>
    		<graphicData>
      			<graphicPaths>
        			<li>Things/Pawn/Humanlike/HeadAttachments/WarforgedMarkings/WarforgedMarkingsA</li>
        			<li>Things/Pawn/Humanlike/HeadAttachments/WarforgedMarkings/WarforgedMarkingsB</li>
        			<li>Things/Pawn/Humanlike/HeadAttachments/WarforgedMarkings/WarforgedMarkingsC</li>
      			</graphicPaths>
      			<visibleNorth>false</visibleNorth>
      			<layer>PostSkin</layer>
      			<colorType>Skin</colorType>
      			<colorRGBPostFactor>1</colorRGBPostFactor>
      			<narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
    		</graphicData>
	</GeneDef>


<!-- Armor Skin Base -->
	<GeneDef Name="ArmorSkinBase" Abstract="True">
		<displayCategory>Violence</displayCategory>
		<biostatCpx>3</biostatCpx>		
  	</GeneDef>
	
<!-- Natural Armor (thick, leathery skin) -->
  <GeneDef ParentName="ArmorSkinBase">
	<defName>NaturalArmor</defName>
	<label>natural armor</label>	
	<description>Carriers of this gene have natural protection gained from having thick, leathery skin.</description>
	<iconPath>UI/Icons/Genes/Gene_NaturalArmor</iconPath>
	<displayOrderInCategory>70</displayOrderInCategory>
	<conditionalStatAffecters>
	  <li Class="ConditionalStatAffecter_Clothed">
		<statOffsets>
		  <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
		  <ArmorRating_Heat>0.30</ArmorRating_Heat>
		</statOffsets>
	  </li>
	  <li Class="ConditionalStatAffecter_Unclothed">
		<statOffsets>
		  <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
		  <ArmorRating_Heat>0.20</ArmorRating_Heat>
		</statOffsets>
	  </li>
	</conditionalStatAffecters>
	<biostatMet>-2</biostatMet>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>cloth</symbol></li>
		<li><symbol>armo</symbol></li>
		<li><symbol>clarmor</symbol></li>
		<li><symbol>power</symbol></li>
	  </prefixSymbols>
	</symbolPack>
  </GeneDef>
	
<!-- Integrated Protection (Metal Skin)-->
   <GeneDef ParentName="ArmorSkinBase">
	<defName>IntegratedProtection</defName>
	<label>integrated protection</label>	
	<description>Carriers of this gene have a metal body with built-in defensive layers, which can be enhanced with armor.</description>
	<iconPath>UI/Icons/Genes/Gene_IntegratedProtection</iconPath>
	<displayOrderInCategory>80</displayOrderInCategory>
	<conditionalStatAffecters>
	  <li Class="ConditionalStatAffecter_Clothed">
		<statOffsets>
		  <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
		  <ArmorRating_Heat>0.50</ArmorRating_Heat>
		</statOffsets>
	  </li>
	  <li Class="ConditionalStatAffecter_Unclothed">
		<statOffsets>
		  <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
		  <ArmorRating_Heat>0.40</ArmorRating_Heat>
		</statOffsets>
	  </li>
	</conditionalStatAffecters>
	<biostatMet>-2</biostatMet>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>cloth</symbol></li>
		<li><symbol>armo</symbol></li>
		<li><symbol>clarmor</symbol></li>
		<li><symbol>power</symbol></li>
	  </prefixSymbols>
	</symbolPack>
  </GeneDef>
	
<!-- Impressionable Gene -->
	<GeneDef>
    		<defName>ImpressionableGene</defName>
    		<label>impressionable</label>    	
    		<description>Carriers of this gene are particularly impressionable, their outlook can be more easily affected by the opinions of others.</description>
    		<iconPath>Genes/Icons/Gene_ImpressionableIcon</iconPath>
    		<displayCategory>Misc</displayCategory>
    		<displayOrderInCategory>500</displayOrderInCategory>
		<statOffsets>
          		<CertaintyLossFactor>3</CertaintyLossFactor>
        	</statOffsets>    		
    		<biostatMet>2</biostatMet>
	</GeneDef>

<!-- Undergrounder Gene -->
	<GeneDef>
    		<defName>UndergrounderGene</defName>
    		<label>undergrounder</label>    	
    		<description>Carriers of this gene have no need to experience the outdoors or light. They will never feel cooped up or get cabin fever no matter how long they stay inside, and are not bothered by darkness.</description>
    		<iconPath>Genes/Icons/Gene_UndergrounderIcon</iconPath>
    		<displayCategory>Misc</displayCategory>
    		<displayOrderInCategory>500</displayOrderInCategory>
    		<forcedTraits>
      			<li>
        			<def>Undergrounder</def>
      			</li>
    		</forcedTraits>
    		<biostatMet>2</biostatMet>
	</GeneDef>
  </Defs>
