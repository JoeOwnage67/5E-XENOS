<?xml version="1.0" encoding="utf-8"?>
<Patch>	
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>JoeOwnage.5eXenos</modId>
		<key>Remove BTEM Xenos and Factions</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationSequence">    
				<operations>
				
					<!-- remove BTE-Mammalia xenotypes -->	
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Barkkin"]</xpath>
					</li>				
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Bonecrown"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Wiretail"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Hidewing"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Seertusk"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Hindhopper"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Haytankard"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Cloudpuff"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Blastheart"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/XenotypeDef[defName="Devilpuff"]</xpath>
					</li>
					
					<!-- remove Biotech Expansion - Mammalia factions  -->
					<li Class="PatchOperationRemove">
						<xpath>Defs/FactionDef[defName="TribeRoughMammals"]</xpath>
					</li>
					<li Class="PatchOperationRemove">
						<xpath>Defs/FactionDef[defName="TribeCivilMammals"]</xpath>
					</li>	
				</operations>   		
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
