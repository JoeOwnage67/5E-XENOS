<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ShellBase">
    <defName>Shell_Kronosmortar</defName>
    <label>Kronos mortar</label>
    <description>Kronos mortar shells. The damage it inflicts on creatures is weak, but it is powerful enough to destroy buildings and causes a chronos explosion.</description>
    <graphicData>
      <texPath>Things/item/Shell_Kronosmortar</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>building_collapse</explosiveDamageType>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>Bullet_Kronosmortar</projectileWhenLoaded>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Kronosmortar</defName>
    <label>Krono smortar</label>
    <graphicData>
      <texPath>Things/weapon/Spacer weapon/Bullet/Bullet_Rastaban</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>building_collapse</damageDef>
      <speed>75</speed>
      <explosionRadius>3.1</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <damageAmountBase>15</damageAmountBase>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>

</Defs>