    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.5</Mass>
    </statBases>
	<equippedAngleOffset>0</equippedAngleOffset>
    <weaponTags Inherit="False">
       <li>through</li>
    </weaponTags>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Demolish</li>
        </capacities>
        <power>14</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Demolish</li>
        </capacities>
        <power>20</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
  </ThingDef>
