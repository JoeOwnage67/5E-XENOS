    <graphicData>
      <texPath>Things/weapon/Melee weapon/Kronos_spear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.3</drawSize>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <techLevel>Industrial</techLevel>
    <statBases>
      <WorkToMake>9500</WorkToMake>
      <Mass>1.5</Mass>
    </statBases>
    <recipeMaker>
      <researchPrerequisites>
	   <li>Infinity_Weapon</li>
       <li>LongBlades</li>  
	  </researchPrerequisites>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>Kronos_Weapon_bench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <MeleeWeapon_Spear>1</MeleeWeapon_Spear>
      <Steel>35</Steel>
      <Plasteel>10</Plasteel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
