    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <techLevel>Industrial</techLevel>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>1.5</Mass>
    </statBases>
	<equippedAngleOffset>0</equippedAngleOffset>
    <meleeHitSound>Melee_Electric_shock</meleeHitSound>
    <recipeMaker>
      <researchPrerequisites>
	   <li>Infinity_Weapon</li>
       <li>LongBlades</li>  
	  </researchPrerequisites>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>Kronos_Weapon_bench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <MeleeWeapon_Mace>1</MeleeWeapon_Mace>
      <Steel>25</Steel>
      <Plasteel>10</Plasteel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <weaponTags Inherit="False">
