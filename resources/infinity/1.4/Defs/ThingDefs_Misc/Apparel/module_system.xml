  <ThingDef ParentName="module_system">
    <defName>Apparel_module_system_melee</defName>
    <label>battle module system(melee)</label>
    <description>This is an exoskeleton module focused solely on close combat. It's focused only on close combat and is not as rigid as a heavy armored exoskeleton, but it has a miniature shield and has a close combat aid.</description>
    <recipeMaker>
      <researchPrerequisites>
	   <li>MultiAnalyzer</li>
       <li>Infinity_module_system</li>  
	  </researchPrerequisites>
    </recipeMaker>
    <thingClass>Apparel</thingClass>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Apparel/module_system/module_system3</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
	  <Apparel_module_system_bulletproof>1</Apparel_module_system_bulletproof>
