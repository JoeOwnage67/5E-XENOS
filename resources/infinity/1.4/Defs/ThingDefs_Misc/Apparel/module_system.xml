<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="module_system" ParentName="ApparelNoQualityBase" Abstract="True">
    <thingCategories Inherit="False">
      <li>Infinity_odule_system</li>
    </thingCategories>
    <tradeability>None</tradeability>
    <generateAllowChance>0</generateAllowChance>

    <recipeMaker>
      <researchPrerequisite>Infinity_module_system</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers Inherit="False">
          <li>Infinity_Apparel_Workbench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
    </recipeMaker>
    <apparel>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <immuneToToxGasExposure>true</immuneToToxGasExposure>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
		<li>EVA</li>
        <li>IndustrialBasic</li>
      </tags>
    </apparel>
  </ThingDef>

 <!--======== 작업 ========-->

  <ThingDef ParentName="module_system">
    <defName>Apparel_module_system_work</defName>
    <label>module system(work)</label>
    <description>This is a work module that Infinities use during non-combat. Efficient in horticulture, construction, and mining operations, they are mainly worn by worker ego.</description>
    <graphicData>
      <texPath>Things/Apparel/module_system/module_system1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Plasteel>20</Plasteel>
      <Steel>120</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>9500</WorkToMake>
      <Mass>0.25</Mass>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <ImmunityGainSpeed>-1</ImmunityGainSpeed>
	  <MiningSpeed>-0.2</MiningSpeed>
      <SmoothingSpeed>0.3</SmoothingSpeed>
	  <MiningYield>0.5</MiningYield> 
	  <PlantWorkSpeed>0.3</PlantWorkSpeed>
	  <ConstructionSpeed>0.3</ConstructionSpeed>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

