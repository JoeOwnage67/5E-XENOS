    <graphicData>
      <texPath>Things/Apparel/infinity_Ballistic_Vest/infinity_Ballistic_Vest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9300</WorkToMake>
      <MaxHitPoints>225</MaxHitPoints>
      <Mass>7</Mass>
      <Flammability>0.5</Flammability>
      <ArmorRating_Sharp>1.10</ArmorRating_Sharp>
