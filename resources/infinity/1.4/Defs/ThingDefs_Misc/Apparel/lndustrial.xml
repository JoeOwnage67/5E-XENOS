      <ArmorRating_Heat>0.35</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.45</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Infinity_Apparel</li>
    </thingCategories>
    <costList>
      <Cloth>60</Cloth>
      <Steel>90</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/infinity_Ballistic_Vest/infinity_Ballistic_Vest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Infinity_Apparel_FlakVest</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
