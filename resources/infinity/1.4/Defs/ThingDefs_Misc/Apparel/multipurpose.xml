<Defs>

  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_backpack</defName>
    <label>Apparel backpack</label>
    <description>A tactical pack used by Infinity soldiers. Contains survival-focused items that increase their effectiveness, but are slowed by the weight of the hunt.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Infinity_module_system</researchPrerequisite>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Cloth>120</Cloth>
      <ComponentIndustrial>2</ComponentIndustrial>
      <Steel>40</Steel>
    </costList>
    <graphicData>
      <texPath>Things/Apparel/pack/Apparel_backpack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.7,0.7)</drawSize>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <Mass>6</Mass>
      <Flammability>0.3</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <thingCategories>
      <li>Infinity_Apparel</li>
    </thingCategories>
    <generateAllowChance>0.15</generateAllowChance>
	<equippedStatOffsets>
        <MoveSpeed>-0.75</MoveSpeed>
        <MedicalTendQuality>0.05</MedicalTendQuality>
	</equippedStatOffsets>
    <apparel>
      <scoreOffset>4</scoreOffset>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li></li>
      </tags>
      <wornGraphicPath>Things/Apparel/pack/Apparel_backpack</wornGraphicPath>
      <wornGraphicData>
        <renderUtilityAsPack>true</renderUtilityAsPack>
        <east>
          <offset>(-0.35,-0.01)</offset>
          <thin><offset>(0.05,0)</offset></thin>
          <hulk><offset>(-0.1,0)</offset></hulk>
          <fat><offset>(-0.15,0)</offset></fat>
        </east>
        <west>
          <offset>(0.35,-0.01)</offset>
          <thin><offset>(-0.05,0)</offset></thin>
          <hulk><offset>(0.1,0)</offset></hulk>
          <fat><offset>(0.15,0)</offset></fat>
        </west>
        <male>  <scale>(0.75,0.75)</scale></male>
        <female><scale>(0.75,0.75)</scale></female>
        <thin>  <scale>(0.7,0.7)</scale></thin>
        <hulk>  <scale>(0.9,0.9)</scale></hulk>
        <fat>   <scale>(0.9,0.9)</scale></fat>
      </wornGraphicData>
    </apparel>
  </ThingDef>

