    <ThingDef ParentName="ApparelDroneBase">
    <defName>Apparel_CSDrone</defName>
    <label>CS Drone</label>
    <description>It is an emp drone developed to counter mechanoids, and fires emp bullets at enemies or mechanoids with shields.</description>
    <techLevel>Industrial</techLevel>
    <costList>
	  <Gun_SmokeLauncher>1</Gun_SmokeLauncher>
	  <Weapon_GrenadeEMP>1</Weapon_GrenadeEMP>
      <Apparel_BSDrone>1</Apparel_BSDrone>
      <ComponentIndustrial>3</ComponentIndustrial>
      <Plasteel>25</Plasteel>
    </costList>
    <graphicData>
      <texPath>Things/Apparel/Drone/CSDrone</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.7,0.7)</drawSize>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>6</Mass>
      <Flammability>0.2</Flammability>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>3</maxCharges>
        <ammoDef>Steel</ammoDef>
        <ammoCountPerCharge>25</ammoCountPerCharge>
        <baseReloadTicks>1</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
    <verbs>
      <li>
        <label>launch Kronos grenade</label>
        <verbClass>Verb_LaunchProjectileStatic</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <onlyManualCast>True</onlyManualCast>
        <range>18.5</range>
        <minRange>3</minRange> 
        <forcedMissRadius>1.5</forcedMissRadius>
        <warmupTime>0.5</warmupTime>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <burstShotCount>2</burstShotCount>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>Bullet_EMPLauncher_Drone</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <generateAllowChance>0</generateAllowChance>
	<equippedStatOffsets>
      <ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
	</equippedStatOffsets>
    <apparel>
      <wornGraphicPath>Things/Apparel/Drone/CSDrone</wornGraphicPath>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_EMPLauncher_Drone</defName>
    <label>EMP launcher shell</label>
    <graphicData>
      <texPath>Things/Projectile/LauncherShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.6</drawSize>
      <shaderType>TransparentPostLight</shaderType>
      <color>(140,135,156)</color>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>85</speed>
      <damageDef>EMP</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>1.8</explosionRadius>
      <postExplosionGasType>BlindSmoke</postExplosionGasType>
      <postExplosionSpawnChance>1</postExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <arcHeightFactor>0.8</arcHeightFactor>
      <shadowSize>0.2</shadowSize>
    </projectile>
  </ThingDef>

