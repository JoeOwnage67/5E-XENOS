<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <HediffDef ParentName="AddedBodyPartBase">
    <defName>Infinity_partsLeg</defName>
    <label>인피니티 기계 파츠 다리</label>
    <labelNoun>기계 파츠 다리</labelNoun>
    <description>An installed bionic leg.</description>
    <descriptionHyperlinks><ThingDef>Infinity_partsLeg</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>Infinity_partsLeg</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.25</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
  </HediffDef>

  <ThingDef ParentName="BodyPartInfinityBionicBase">
    <defName>Infinity_partsLeg</defName>
    <label>인피니티 기계 파츠 다리</label>
    <description>An advanced artificial leg. With its biogel nerve-link, powerful mini-servos, and lattice-dust healing system, it is better than a biological leg in almost every way.</description>
    <descriptionHyperlinks><RecipeDef>Infinity_partsInstall</RecipeDef></descriptionHyperlinks>
    <costList>
      <Plasteel>15</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Infinity_parts</researchPrerequisite>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
    <statBases>
      <Mass>8</Mass>
    </statBases>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>Infinity_partsInstall</defName>
    <label>인피니티 기계 파츠 다리</label>
    <description>인피니티 기계 파츠 다리 설치.</description>
    <descriptionHyperlinks>
      <ThingDef>Infinity_partsLeg</ThingDef>
      <HediffDef>Infinity_partsLeg</HediffDef>
    </descriptionHyperlinks>
    <jobString>인피니티 기계 파츠 다리 해체.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Infinity_partsLeg</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Infinity_partsLeg</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Infinity_Leg</li>
    </appliedOnFixedBodyParts>
    <recipeUsers>
         <li>Infinity</li>
    </recipeUsers>
    <addsHediff>Infinity_partsLeg</addsHediff>
  </RecipeDef>

