<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="Kronos_large_turretBuilding" ParentName="BuildingBase" Abstract="True">
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/Security/Precision_Elevation_Cannon_Base</texPath>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(5,5)</drawSize>
      <damageData>
        <rect>(0.38,0.2,0.56375,0.8)</rect>
        <cornerTL>Damage/Corner</cornerTL>
      </damageData>
      <shadowData>
        <offset>(-0.13,-0.87,-0.1)</offset>
        <volume>(0.5,0.4,1.05)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-3)</interactionCellOffset>
    <stealable>false</stealable>
    <size>(5,5)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <tickerType>Normal</tickerType>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>9</constructionSkillPrerequisite>
    <inspectorTabs>
      <li>ITab_Shells</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <uiIconScale>1.1</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="Kronos_large_turretBuilding">
    <defName>Precision_Elevation_Cannon</defName>
    <label>Precision Elevation Cannon</label>
    <description>Chronos precision high-angle fixed gun used by the Kronos unit. It is equipped with a precision aiming system, which allows you to aim and fire more accurately than a regular mortar, does not require a reinforced barrel, but has a slower reload speed.</description>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Kronos_explosion</explosiveDamageType>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>550</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <WorkToBuild>12500</WorkToBuild>
      <Mass>250</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <costList>
      <precision_aiming_parts>1</precision_aiming_parts>
      <Steel>250</Steel>
      <Plasteel>85</Plasteel>
      <Uranium>30</Uranium>
      <ComponentIndustrial>15</ComponentIndustrial>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <researchPrerequisites>
      <li>Infinity_Mortars</li>
    </researchPrerequisites>
    <designationHotKey>Misc4</designationHotKey>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <building>
      <turretGunDef>Precision_Elevation_Cannon_Top</turretGunDef>
      <turretTopDrawSize>5.0</turretTopDrawSize>
      <turretBurstWarmupTime>2.0</turretBurstWarmupTime>
      <turretBurstCooldownTime>35.0</turretBurstCooldownTime>
    </building>
  <uiIconPath>Things/Building/Security/Precision_Elevation_Cannon_MenuIcon</uiIconPath>
  <uiIconScale>0.9</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>Precision_Elevation_Cannon_Top</defName>
    <label>Precision Elevation Cannon Top</label>
    <recoilPower>8</recoilPower>
    <graphicData>
      <texPath>Things/Building/Security/Precision_Elevation_Cannon_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,5)</drawSize>
    </graphicData>
    <weaponTags>
      <li></li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <warmupTime>3.5</warmupTime>
        <forcedMissRadius>4</forcedMissRadius>
        <forcedMissRadiusClassicMortars>5</forcedMissRadiusClassicMortars>
        <isMortar>true</isMortar>
        <requireLineOfSight>false</requireLineOfSight>
        <minRange>25.9</minRange>
        <range>500</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_SeptentrionsGun</soundCast>
        <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <muzzleFlashScale>16</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_ChangeableProjectile" />
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>MortarShells</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>MortarShells</li>
          </categories>
          <disallowedThingDefs>
            <li>Shell_Firefoam</li>
            <li>Shell_AntigrainWarhead</li>
          </disallowedThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>

