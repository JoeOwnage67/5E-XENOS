<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--==== 데스 트루퍼 타격대 ===-->

	<PawnKindDef ParentName="InfinityBaseEgoPawnKind">
		<defName>Infinity_Death_Trooper_strike_squad</defName>
		<label>Death Trooper strike squad</label>
		<combatPower>220</combatPower>
		<isFighter>true</isFighter>
		<forceNormalGearQuality>true</forceNormalGearQuality>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
        <initialResistanceRange>35~75</initialResistanceRange>
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>Trooper</li>
				</categories>
			</li>
		</backstoryFiltersOverride>				
		<apparelTags>
          <li>IndustrialBasic</li>
		</apparelTags>
		<apparelMoney>
			<min>2000</min>
			<max>3000</max>
		</apparelMoney>
		<apparelRequired>
		   <li>Death_Trooper_ArmorHelmet</li>
           <li>Death_Trooper_PowerArmor</li>
           <li>Apparel_module_system_shooting</li>
		</apparelRequired>
		<weaponTags>
          <li>Infinity_Kronos</li>
		</weaponTags>
		<weaponMoney>
			<min>4000</min>
			<max>6000</max>
		</weaponMoney>
		<techHediffsChance>0.02</techHediffsChance>
		<techHediffsMoney>
			<min>50</min>
			<max>800</max>
		</techHediffsMoney>
		<techHediffsTags>
			<li>Advanced</li>
		</techHediffsTags>
		<apparelAllowHeadgearChance>0.7</apparelAllowHeadgearChance>
		<inventoryOptions>
			<skipChance>0.5</skipChance>
			<subOptionsChooseOne>
				<li>
					<thingDef>Silver</thingDef>
					<countRange>
						<min>50</min>
						<max>100</max>
					</countRange>
				</li>
			</subOptionsChooseOne>
		</inventoryOptions>
	</PawnKindDef>

