<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
    <defName>Mental_Electric_Power</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <label>Electric shock</label>
    <description>전력이 흐르는 무기로 상대를 감전시켜 약화시킵니다..</description>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <isBad>false</isBad>
    <maxSeverity>1.5</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-15</severityPerDay>
		<showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>	      
		<minSeverity>0.4</minSeverity>
	    <label>Step 1</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
	      <PainShockThreshold>0.95</PainShockThreshold>
          <MeleeHitChance>0.9</MeleeHitChance>
          <MeleeDodgeChance>0.9</MeleeDodgeChance>
          <MeleeDamageFactor MayRequire="Ludeon.RimWorld.Biotech">0.95</MeleeDamageFactor>
		</statFactors>
      </li>
      <li>	      
		<minSeverity>1.0</minSeverity>
	    <label>Step 2</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
	      <PainShockThreshold>0.90</PainShockThreshold>
          <MeleeHitChance>0.85</MeleeHitChance>
          <MeleeDodgeChance>0.85</MeleeDodgeChance>
          <MeleeDamageFactor MayRequire="Ludeon.RimWorld.Biotech">0.9</MeleeDamageFactor>
		</statFactors>
      </li>
      <li>	      
		<minSeverity>1.4</minSeverity>
	    <label>Step 3</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
	      <PainShockThreshold>0.85</PainShockThreshold>
          <MeleeHitChance>0.8</MeleeHitChance>
          <MeleeDodgeChance>0.8</MeleeDodgeChance>
          <MeleeDamageFactor MayRequire="Ludeon.RimWorld.Biotech">0.8</MeleeDamageFactor>
		</statFactors>
      </li>
    </stages>
  </HediffDef>

    <HediffDef>
    <defName>Mental_Kronos_stone</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <label>Chronos</label>
    <description>상대의 정신 시간을 느리게 만듭니다.</description>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <isBad>false</isBad>
    <maxSeverity>3</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-9</severityPerDay>
		<showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>	      
		<minSeverity>0.5</minSeverity>
	    <label>Step 1</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
			<MoveSpeed>0.8</MoveSpeed>
	        <AimingDelayFactor>1.2</AimingDelayFactor>
            <RangedCooldownFactor MayRequire="Ludeon.RimWorld.Biotech">1.1</RangedCooldownFactor>
		</statFactors>
	    <statOffsets>			
		  <ReloadSpeed MayRequire="CETeam.CombatExtended">-0.1</ReloadSpeed>
	    </statOffsets>
      </li>
      <li>	      
		<minSeverity>1</minSeverity>
	    <label>Step 2</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
			<MoveSpeed>0.75</MoveSpeed>
	        <AimingDelayFactor>1.4</AimingDelayFactor>
            <RangedCooldownFactor MayRequire="Ludeon.RimWorld.Biotech">1.2</RangedCooldownFactor>
		</statFactors>
	    <statOffsets>			
		  <ReloadSpeed MayRequire="CETeam.CombatExtended">-0.15</ReloadSpeed>
	    </statOffsets>
      </li>
      <li>	      
		<minSeverity>1.5</minSeverity>
	    <label>Step 3</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
			<MoveSpeed>0.7</MoveSpeed>
	        <AimingDelayFactor>1.6</AimingDelayFactor>
            <RangedCooldownFactor MayRequire="Ludeon.RimWorld.Biotech">1.3</RangedCooldownFactor>
		</statFactors>
	    <statOffsets>			
		  <ReloadSpeed MayRequire="CETeam.CombatExtended">-0.2</ReloadSpeed>
	    </statOffsets>
      </li>
      <li>	      
		<minSeverity>2</minSeverity>
	    <label>Step 4</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
			<MoveSpeed>0.65</MoveSpeed>
	        <AimingDelayFactor>1.8</AimingDelayFactor>
            <ShootingAccuracyPawn>0.9</ShootingAccuracyPawn>
            <RangedCooldownFactor MayRequire="Ludeon.RimWorld.Biotech">1.4</RangedCooldownFactor>
		</statFactors>
	    <statOffsets>			
		  <ReloadSpeed MayRequire="CETeam.CombatExtended">-0.25</ReloadSpeed>
	    </statOffsets>
      </li>
      <li>	      
		<minSeverity>2.5</minSeverity>
	    <label>Step 5</label>		
		<becomeVisible>true</becomeVisible>
		<statFactors>
			<MoveSpeed>0.6</MoveSpeed>
	        <AimingDelayFactor>2</AimingDelayFactor>
            <ShootingAccuracyPawn>0.8</ShootingAccuracyPawn>
            <RangedCooldownFactor MayRequire="Ludeon.RimWorld.Biotech">1.5</RangedCooldownFactor>
		</statFactors>
	    <statOffsets>			
		  <ReloadSpeed MayRequire="CETeam.CombatExtended">-0.3</ReloadSpeed>
	    </statOffsets>
      </li>
    </stages>
  </HediffDef>

    <HediffDef>
